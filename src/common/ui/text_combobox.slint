import {
    HorizontalBox, ComboBox
} from "std-widgets.slint";

TextComboBox := HorizontalLayout {
    property <string> text;
    property <[string]> model;

    t := Text {
        horizontal-stretch: 1;
        text: root.text;
    }

    ComboBox {
        height: t.height;
        horizontal-stretch: root.model.length;
        model: root.model;
        current-index: 0;
    }
}


