import {
    LineEdit, ComboBox, TabWidget, Button,
    GroupBox, VerticalBox, HorizontalBox, SpinBox,
    TextEdit, CheckBox
} from "std-widgets.slint";
import {TimerDialog} from "device_edit_dialogs/timer.slint";
import {DeviceChannelDialog} from "device_edit_dialogs/device_channel_config.slint";
import {VerticalDividingLine, HorizontalDividingLine} from "../components/ui/dividing_line/dividing_line.slint";
// import {BasicEntries} from "./device_edit_dialogs/.slint";
import {TextSpinBox} from "../common/ui/text_spinbox.slint";
import {TextLineEdit} from "../common/ui/text_lineedit.slint";
import {TextComboBox} from "../common/ui/text_combobox.slint";

Pane := Rectangle {
    TouchArea {
        enabled: true;
    }
}

export DeviceEditDialog := Window {
    property <string> device_no;
    property <string> device_name;
    property <string> device_address;
    property <string> device_alarm_group_no;

    callback on_ok_clicked;
    callback on_cancel_clicked;

    // private
    property <bool> show_timer_dialog: true;
    property <bool> show_device_channel_dialog: true;

    Pane {
    x: 100px;
    y: 0px;
    width: 800px;
    height: 800px;
    background: white;
    border-width: 2px;
    border-color: grey;
    border-radius: 3px;

    VerticalBox {
    // VerticalLayout {
        // max-height: parent.height;

        GroupBox {
            vertical-stretch: 2;
            title: "设备基本信息";

            // VerticalBox {
            VerticalLayout {
                TextComboBox {
                    text: "设备实现类选择";
                    model: ["1.dll", "2.dll", "3.dll"];
                }

                // HorizontalBox {
                HorizontalLayout {
                    // HorizontalBox {
                    TextLineEdit {
                        text_text: "设备编号";
                        line_edit_text: root.device_no;
                    }
                    TextLineEdit {
                        text_text: "设备名称";
                        line_edit_text: root.device_name;
                    }
                }
            }
        }

        HorizontalLayout {
            vertical-stretch: 4;

            GroupBox {
                title: "设备通道配置";

                VerticalLayout {
                    TextSpinBox {
                        text: "数值输入通道";
                    }
                    TextSpinBox {
                        text: "数值输出通道";
                    }
                    TextSpinBox {
                        text: "开关量输入通道";
                    }
                    TextSpinBox {
                        text: "开关量输出通道";
                    }
                }
            }

            GroupBox {
                title: "设备报警相关配置";

                VerticalLayout {
                    TextLineEdit {
                        text_text: "设备报警组编号";
                        line_edit_text: root.device_alarm_group_no;
                    }
                }
            }
        }

        GroupBox {
            vertical-stretch: 3;
            title: "设备通道详细配置";

            HorizontalLayout {
                Button {
                    text: "数值输入通道";
                }
                Button {
                    text: "数值输出通道";
                    enabled: false;
                }
                Button {
                    text: "开关量输入通道";
                }
                Button {
                    text: "开关量输出通道";
                    enabled: false;
                }
            }
        }

        GroupBox {
            vertical-stretch: 2;
            title: "设备通信默认参数配置";

            VerticalLayout {
                HorizontalLayout {
                    TextComboBox {
                        horizontal-stretch: 3;
                        text: "通信类型选择";
                        model: ["COM1"];
                    }
                    TextLineEdit {
                        horizontal-stretch: 2;
                        text_text: "设备地址(HEX)";
                        line_edit_text: root.device_address;
                    }
                    CheckBox {
                        horizontal-stretch: 2;
                        text: "是否启用设备";
                        checked: false;
                    }
                }
                HorizontalLayout {
                    TextComboBox {
                        horizontal-stretch: 1;
                        text: "串口号";
                        model: [];
                    }
                    TextComboBox {
                        horizontal-stretch: 1;
                        text: "波特率";
                        model: ["9600"];
                    }
                }
                HorizontalLayout {
                    TextComboBox {
                        text: "数据位";
                        model: ["8"];
                    }
                    TextComboBox {
                        text: "停止位";
                        model: ["1"];
                    }
                    TextComboBox {
                        text: "校验位";
                        model: ["None"];
                    }
                }
            }
        }

        GroupBox {
            vertical-stretch: 2;
            title: "设备描述信息";

            TextEdit {
            }
        }

        HorizontalLayout {
            vertical-stretch: 1;

            padding-right: 30px;
            alignment: end;

            Button {
                text: "确定";
                // width: 80px;
                // height: 30px;

                clicked => {
                    root.on_ok_clicked()
                }
            }

            HorizontalDividingLine{ value: 30px; }

            Button {
                text: "取消";
                // width: 80px;
                // height: 30px;

                clicked => {
                    root.on_cancel_clicked()
                }
            }
        }
    }
    }

    if show_timer_dialog: TimerDialog {
        on_ok_clicked => {
            show_timer_dialog = false;
        }
        on_cancel_clicked => {
            show_timer_dialog = false;
        }
    }

    if show_device_channel_dialog: DeviceChannelDialog {
        on_ok_clicked => {
            show_device_channel_dialog = false;
        }
        on_cancel_clicked => {
            show_device_channel_dialog = false;
        }
    }
}

